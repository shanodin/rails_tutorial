<h1>Rooms</h1>

<%= new_room_button() %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <% if (room.id != 1) %>
      <tr>
        <td>'Room: ' <%= room.number %></td>
        <td>'Residents: ' <% count_occupants(room, @residents) %></td>
        <td><%= room_view_button(room)%></td>
        <td><%= room_edit_button(room)%></td>
        <td><%= room_delete_button(room)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>