<h1>Residents</h1>

<%= button_to "Add New Resident", new_resident_path(), :method => :get %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.name %></td>
        <td><%= resident.age %></td>
        <td><%= resident_view_button(resident) %></td>
        <td><%= resident_edit_button(resident) %></td>
        <td><%= resident_delete_button(resident) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>